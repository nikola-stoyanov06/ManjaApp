@model Services.DTOs.CategoryDTO

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        
    </dl>
</div>
<div class="d-flex flex-wrap justify-content-between">
    @foreach (var item in ViewBag.Manjas)
    {
        <div class="card col-3 my-3 p-3 mx-3">
            <div class="img-thumbnail">
                <img class="img-thumbnail"
                     src="~/uploads/@item.Picture" alt="@item.Title">
            </div>
            <a asp-action="Details" asp-route-id="@item.Id">@item.Title</a>
            <div class="d-flex justify-content-around my-3">
                <a class="btn-info btn" href="/Manjas/Details/@item.Id"> Details </a>
            </div>
        </div>

    }
<div>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
</div>
